{
  "name": "@deathbeds/jupyterlab-font-dejavu-sans-mono",
  "version": "3.0.0.alpha0",
  "description": "Dejavu Sans Mono Fonts for JupyterLab",
  "keywords": [
    "fonts",
    "jss",
    "jupyter",
    "jupyterlab-extension",
    "jupyterlab"
  ],
  "bugs": {
    "url": "https://github.com/deathbeds/jupyterlab-fonts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deathbeds/jupyterlab-fonts"
  },
  "license": "BSD-3-Clause",
  "author": "Dead Pixels Collective",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "{lib,style,src}/**/*.{d.ts,js,css,woff2,ts,tsx,js.map}",
    "{README.md,LICENSE}",
    "vendor/dejavu-fonts-ttf/LICENSE"
  ],
  "scripts": {
    "labextension:build": "jupyter labextension build .",
    "labextension:build:cov": "tsc -b tsconfig.cov.json && jupyter labextension build .",
    "prebuild": "python scripts/convert.py",
    "watch": "jupyter labextension watch --debug ."
  },
  "dependencies": {
    "@deathbeds/jupyterlab-fonts": "~3.0.0.alpha0",
    "@jupyterlab/application": "3 || 4"
  },
  "devDependencies": {
    "@deathbeds/jupyterlab-fonts": "workspace:*",
    "@jupyterlab/builder": "^4.0.5",
    "dejavu-fonts-ttf": "^2.37.3"
  },
  "jupyterlab": {
    "extension": true,
    "outputDir": "../../src/jupyterlab_fonts/_d/share/jupyter/labextensions/@deathbeds/jupyterlab-font-dejavu-sans-mono",
    "webpackConfig": "./webpack.config.js",
    "sharedPackages": {
      "@deathbeds/jupyterlab-fonts": {
        "bundled": false,
        "singleton": true
      }
    }
  },
  "doitoml": {
    "prefix": "js-font-dejavu-sans-mono",
    "paths": {
      "npm_dist": [
        "../../dist/deathbeds-jupyterlab-font-dejavu-sans-mono-${JLF_VERSION}.tgz"
      ],
      "all_style": [
        ":rglob::style::*.*"
      ],
      "here": [
        "."
      ],
      "dist_pkg_json": [
        "../../src/jupyterlab_fonts/_d/share/jupyter/labextensions/@deathbeds/jupyterlab-font-dejavu-sans-mono/package.json"
      ]
    },
    "tasks": {
      "build": {
        "ext": {
          "actions": [
            [
              "::js-root::build_labext"
            ]
          ],
          "file_dep": [
            "::all_style",
            "::js-root::tsbuildinfo",
            "::js-root::yarn_history"
          ],
          "targets": [
            "::dist_pkg_json"
          ]
        }
      },
      "dist": {
        "meta": {
          "doitoml": {
            "cwd": "../../dist"
          }
        },
        "file_dep": [
          "::all_style",
          "::js-root::tsbuildinfo",
          "LICENSE",
          "package.json",
          "README.md"
        ],
        "actions": [
          [
            "::dt::conda_run_build",
            "npm",
            "pack",
            "::here"
          ]
        ],
        "targets": [
          "::npm_dist"
        ]
      }
    }
  }
}
