{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:schema && lerna run prebuild && yarn build:ts",
    "build:schema": "lerna run build:schema",
    "build:static": "yarn webpack -p",
    "build:ts": "cd packages && cd _meta && tsc -b",
    "clean": "yarn clean:lib && yarn clean:test",
    "clean:lib": "lerna exec --parallel -- rimraf lib",
    "clean:test": "rimraf _testoutput",
    "eslint:check": "eslint --cache --config=.eslintrc.js --ext \".js,.jsx,.ts,.tsx\" packages",
    "prettier:check": "prettier --list-different --cache --cache-location=build/.cache/prettier \"./*.{json,md,yml,js}\" \"{packages,.github,.binder}/**/*.{ts,tsx,css,json,md}\"",
    "test": "yarn test:robot",
    "test:robot": "python -m robot -d _testoutput -X tests/acceptance",
    "watch": "cd packages/_meta && tsc -b -w",
    "watch:schema": "yarn lerna run watch:schema --parallel"
  },
  "prettier": {
    "printWidth": 88,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true
  },
  "nyc": {
    "all": true,
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "lcov",
      "html",
      "text",
      "text-summary"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "skip-full": true
  },
  "devDependencies": {
    "@ephesoft/webpack.istanbul.loader": "^2.2.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "file-loader": "^6.2.0",
    "lerna": "^7.1.5",
    "nyc": "^15.1.0",
    "prettier": "^3.0.2",
    "raw-loader": "^4.0.2",
    "source-map-loader": "^4.0.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6",
    "yarn-berry-deduplicate": "^6.1.1"
  },
  "doitoml": {
    "prefix": "js-root",
    "paths": {
      "pj": [
        "package.json"
      ],
      "yarnrc": [
        ".yarnrc.yml"
      ],
      "all_pj": [
        "::pj",
        ":glob::packages::*/package.json"
      ],
      "yarn_history": [
        "node_modules/.yarn-state.yml"
      ],
      "all_md": [
        ":glob::.::*.md",
        ":rglob::.github::*.md",
        ":glob::packages::*/*.md"
      ],
      "all_json": [
        ":glob::.::*.json",
        ":glob::.binder::*.json",
        ":glob::packages::*/*.json",
        ":glob::packages::*/schema/*.json"
      ],
      "all_yml": [
        ":glob::.::*.yml",
        ":rglob::.github::*.yml"
      ],
      "all_ts": [
        ":glob::packages::*/src/**/*.ts",
        ":glob::packages::*/src/**/*.tsx"
      ],
      "all_js": [
        ":glob::.::*.js"
      ],
      "all_css": [
        ":glob::packages::*/style/**/*.css"
      ],
      "schema_deps": [
        "packages/jupyterlab-fonts/schema/fonts.json"
      ],
      "schema_targets": [
        "packages/jupyterlab-fonts/src/_schema.d.ts",
        "packages/jupyterlab-fonts/lib/_schema.d.ts"
      ],
      "prebuild_deps": [
        "packages/jupyterlab-font-dejavu-sans-mono/scripts/convert.py"
      ],
      "tsbuildinfo": [
        "packages/_meta/tsconfig.tsbuildinfo"
      ],
      "all_tsconfig": [
        ":glob::.::tsconfig*.json",
        ":glob::packages::*/tsconfig*.json"
      ]
    },
    "env": {
      "JLF_SHARED": "src/jupyterlab_fonts/_d/share/jupyter/labextensions/@deathbeds",
      "NX_CACHE_DIRECTORY": "build/.cache/nx",
      "NX_PROJECT_GRAPH_CACHE_DIRECTORY": "build/.cache/nx",
      "YARN_CACHE_FOLDER": "build/.cache/yarn"
    },
    "tokens": {
      "jlpm": [
        "::dt::conda_run_build",
        "jlpm"
      ],
      "lerna": [
        "::jlpm",
        "lerna",
        "run",
        "--stream"
      ],
      "build_labext": [
        "::dt::conda_run_build",
        "jupyter",
        "labextension",
        "build"
      ]
    },
    "tasks": {
      "setup": {
        "file_dep": [
          "::yarnrc",
          "::dt::env_build_history",
          "::all_pj"
        ],
        "targets": [
          "::yarn_history"
        ],
        "actions": [
          [
            "::jlpm",
            "install"
          ],
          [
            "::jlpm",
            "yarn-berry-deduplicate",
            "--strategy=fewer",
            "--fail"
          ]
        ],
        "meta": {
          "doitoml": {
            "env": {
              "YARN_ENABLE_IMMUTABLE_INSTALLS": "false"
            }
          }
        }
      },
      "build": {
        "pre": {
          "actions": [
            [
              "::lerna",
              "prebuild"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::prebuild_deps",
            "::schema_deps"
          ],
          "targets": [
            "::schema_targets"
          ]
        },
        "lib": {
          "actions": [
            [
              "::lerna",
              "build"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::all_ts",
            "::all_tsconfig",
            "::schema_targets"
          ],
          "targets": [
            "::tsbuildinfo"
          ]
        }
      },
      "watch": {
        "ts": {
          "uptodate": [
            false
          ],
          "actions": [
            [
              "::lerna",
              "--scope=@deathbeds/meta-jupyterlab-fonts",
              "watch"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::all_ts",
            "::schema_targets"
          ]
        }
      },
      "fix": {
        "prettier": {
          "actions": [
            [
              "::jlpm",
              "prettier:check",
              "--write"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::all_md",
            "::all_json",
            "::all_ts",
            "::all_css",
            "::all_yml",
            "::all_js"
          ]
        },
        "eslint": {
          "actions": [
            [
              "::jlpm",
              "eslint:check",
              "--fix"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::all_ts",
            "::all_js"
          ]
        }
      },
      "lint": {
        "prettier": {
          "actions": [
            [
              "::jlpm",
              "prettier:check"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::all_md",
            "::all_json",
            "::all_ts",
            "::all_css",
            "::all_yml",
            "::all_js"
          ]
        },
        "eslint": {
          "actions": [
            [
              "::jlpm",
              "eslint:check"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::all_ts",
            "::all_js"
          ]
        }
      }
    }
  }
}
