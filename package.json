{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "jlpm || jlpm || jlpm && jlpm lint && jlpm bootstrap:js",
    "bootstrap:js": "jlpm lerna bootstrap && jlpm build",
    "build": "jlpm build:schema && lerna run prebuild && jlpm build:ts",
    "build:schema": "lerna run build:schema",
    "build:static": "jlpm webpack -p",
    "build:ts": "cd packages && cd _meta && tsc -b",
    "clean": "jlpm clean:lib && jlpm clean:test",
    "clean:lib": "lerna exec --parallel -- rimraf lib",
    "clean:test": "rimraf _testoutput",
    "lint": "jlpm lint:py && jlpm lint:ts && jlpm lint:sh",
    "lint:prettier": "prettier --write \"./*{json,md,yml}\" \"{packages,.github,.binder}/**/*.{ts,tsx,css,json,md}\"",
    "lint:py": "black nbjss setup.py && flake8 nbjss setup.py",
    "lint:robot": "python -m robot.tidy --inplace tests/**/*.robot && rflint --configure TooManyTestSteps:40 --configure TooFewKeywordSteps:0  tests/**/*.robot",
    "lint:sh": "beautysh -i 2 postBuild",
    "lint:ts": "jlpm lint:prettier && jlpm lint:tslint",
    "lint:tslint": "tslint --fix -c tslint.json --project tsconfigbase.json 'packages/**/*{.ts,.tsx}'",
    "test": "jlpm test:robot",
    "test:robot": "python -m robot -d _testoutput -X tests/acceptance",
    "watch": "cd packages/_meta && tsc -b -w",
    "watch:schema": "jlpm lerna run watch:schema --parallel"
  },
  "prettier": {
    "printWidth": 88,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true
  },
  "nyc": {
    "all": true,
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "lcov",
      "html",
      "text",
      "text-summary"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "skip-full": true
  },
  "devDependencies": {
    "@ephesoft/webpack.istanbul.loader": "^2.1.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "lerna": "^6.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.11",
    "source-map-loader": "^4.0.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6",
    "yarn-berry-deduplicate": "^6.1.1"
  },
  "doitoml": {
    "prefix": "js-meta",
    "paths": {
      "pj": [
        "package.json"
      ],
      "yarn_history": [
        ".yarn/install-state.gz"
      ],
      "all_md": [
        ":glob::.::*.md",
        ":rglob::.github::*.md",
        ":glob::packages::*/*.md"
      ],
      "all_json": [
        ":glob::.::*.json",
        ":glob::.binder::*.json",
        ":glob::packages::*/*.json",
        ":glob::packages::*/schema/*.json"
      ],
      "all_ts": [
        ":glob::packages::*/src/**/*.ts",
        ":glob::packages::*/src/**/*.tsx"
      ],
      "all_css": [
        ":glob::packages::*/style/**/*.css"
      ]
    },
    "env": {
      "YARN_ENABLE_IMMUTABLE_INSTALLS": "false"
    },
    "tokens": {
      "jlpm": [
        "::dt::conda_run_build",
        "jlpm"
      ]
    },
    "tasks": {
      "setup": {
        "file_dep": [
          "::pj",
          "::dt::env_build_history"
        ],
        "targets": [
          "::yarn_history"
        ],
        "actions": [
          [
            "::jlpm",
            "install"
          ],
          [
            "::jlpm",
            "yarn-berry-deduplicate",
            "--strategy=fewer",
            "--fail"
          ]
        ]
      },
      "fix": {
        "prettier": {
          "actions": [
            [
              "::jlpm",
              "lint:prettier"
            ]
          ],
          "file_dep": [
            "::yarn_history",
            "::all_md",
            "::all_json",
            "::all_ts",
            "::all_css"
          ]
        }
      }
    }
  },
  "resolutions": {
    "@deathbeds/jupyterlab-font-anonymous-pro": "file:./packages/jupyterlab-font-anonymous-pro",
    "@deathbeds/jupyterlab-font-dejavu-sans-mono": "file:./packages/jupyterlab-font-dejavu-sans-mono",
    "@deathbeds/jupyterlab-font-fira-code": "file:./packages/jupyterlab-font-fira-code",
    "@deathbeds/jupyterlab-fonts": "file:./packages/jupyterlab-fonts"
  }
}
