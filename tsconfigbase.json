{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "types": ["node", "webpack-env"],
    "typeRoots": ["../node_modules/@types"]
  }
}
